    <script>
        window.addEventListener('scroll',function(){
            let navbar=document.getElementById("menu-bar");
            if(window.pageYOffset>=102){
                navbar.classList.add('sticky');
            }else{
                navbar.classList.remove('sticky');
            }
        });
    </script>
