    <script>
         function changeBG(clr){
            document.body.style.backgroundColor=clr;
            let txt=document.getElementsByClassName("text");
            if(clr == "#000000"){
                for(let elm of txt){
                    elm.style.color ="white";
                }
            }else{
                for(let elm of txt){
                    elm.style.color ="Black";
                }
            }

         }
    </script>
